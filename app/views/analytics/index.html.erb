<div class="container">
  <h1 class="mb-3">Analytics</h1>
  <div class="row">
    <div class="col-6">
      <h5>Leads by Day (last 7)</h5>
      <table class="table table-sm">
        <thead><tr><th>Date</th><th>Count</th></tr></thead>
        <tbody>
          <% @by_day.sort.each do |day, count| %>
            <tr><td><%= day %></td><td><%= count %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-6">
      <h5>Leads by Source</h5>
      <table class="table table-sm">
        <thead><tr><th>Source</th><th>Count</th></tr></thead>
        <tbody>
          <% @by_source.each do |src, cnt| %>
            <tr><td><%= src %></td><td><%= cnt %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
